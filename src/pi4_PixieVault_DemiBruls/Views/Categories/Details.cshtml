@model pi4_PixieVault_DemiBruls.Models.Category;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CollectionItems)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.CollectionItems)
            {
                <dl>
                    @item.Name
                    <a class="btn btn-crud" href="/CollectionItems/Details/@item.Id">Bekijk item</a>
                </dl>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-crud" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn btn-crud" asp-action="Index">Back to List</a>
</div>
